#lang scheme

; Ex 2.46

; Program for working with vectors
(define (make-vect x y) (cons x y))

; Selectors
(define (xcor-vect v) (car v))
(define (ycor-vect v) (cdr v))

; Operations on vectors
(define (add-vect v w)
  (make-vect
   (+ (xcor-vect v) (xcor-vect w))
   (+ (ycor-vect v) (ycor-vect w))))
