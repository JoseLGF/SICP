#lang scheme

; Ex 1.12

(define (pascal-element position depth)
  (cond ((= depth 1) (if (= position 1) 1 0))
        (else (if (< position 1)
                  0
                  (+ (pascal-element position (- depth 1))
                     (pascal-element (- position 1) (- depth 1)))))))


(pascal-element 6 5)